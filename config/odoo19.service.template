[Unit]
Description=Odoo {{ODOO_VERSION}} Community
After=network.target postgresql.service

[Service]
Type=simple
User=odoo
Group=odoo
ExecStart=/opt/odoo/odoo{{ODOO_VERSION}}/venv/bin/python3 /opt/odoo/odoo{{ODOO_VERSION}}/odoo/odoo-bin -c /etc/odoo{{ODOO_VERSION}}.conf
StandardOutput=journal+console
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target