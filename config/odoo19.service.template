[Unit]
Description=Odoo 19 Community
After=network.target postgresql.service

[Service]
Type=simple
User=odoo
Group=odoo
ExecStart=/opt/odoo/odoo19/venv/bin/python3 /opt/odoo/odoo19/odoo/odoo-bin -c /etc/odoo19.conf
StandardOutput=journal+console
Restart=always

[Install]
WantedBy=multi-user.target
